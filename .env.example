# Google Cloud Configuration
GCP_PROJECT_ID=your-project-id
GCP_LOCATION=asia-northeast1

# Vertex AI
GEMINI_MODEL=gemini-1.5-pro

# Vertex AI Agent Builder (Discovery Engine)
# Optional: Leave empty if not using search functionality
SEARCH_ENGINE_ID=
SEARCH_DATA_STORE_ID=

# Google Drive
# Optional: Leave empty if not using Drive integration
DRIVE_FOLDER_ID=

# GCS (for document storage)
GCS_BUCKET=your-bucket-name

# Firestore
FIRESTORE_COLLECTION=scan_results

# Environment Mode
# Set to "production" to use Secret Manager
# Leave empty or set to "development" for local .env
ENV=development
